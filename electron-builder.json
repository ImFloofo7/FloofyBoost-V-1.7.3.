{
  "appId": "com.floofyboost.app",
  "productName": "FloofyBoost",
  "files": [
    "dist/**/*",
    "node_modules/**/*"
  ],
  "directories": {
    "buildResources": "assets"
  },
  "win": {
    "target": [
      "nsis",
      "portable"
    ],
    "icon": "assets/logo.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "installerIcon": "assets/logo.ico"
  },
  "extraMetadata": {
    "version": "1.7.3"
  },
  "portable": {
    "artifactName": "FloofyBoost-${version} BETA.exe"
  }
}
